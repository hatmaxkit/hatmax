# Generated by hatmax. Do not edit.

.PHONY: all build run test clean lint tidy

APP_NAME := todo
BUILD_DIR := .
BIN_NAME := $(APP_NAME)
GO_VERSION := 1.22.7 # Or get from go.mod

all: build

build:
	@echo "Building $(BIN_NAME)..."
	@go build -o $(BUILD_DIR)/$(BIN_NAME) ./main.go
	@echo "$(BIN_NAME) built successfully."

run: build
	@echo "Running $(BIN_NAME)..."
	@$(BUILD_DIR)/$(BIN_NAME)

test:
	@echo "Running tests..."
	@go test -v ./...

clean:
	@echo "Cleaning up..."
	@rm -f $(BUILD_DIR)/$(BIN_NAME)
	@go clean
	@echo "Cleanup complete."

lint:
	@echo "Running linter..."
	@go vet ./...
	# Add more linters if needed, e.g., golangci-lint
	@echo "Linter complete."

tidy:
	@echo "Running go mod tidy..."
	@go mod tidy
	@echo "go mod tidy complete."
